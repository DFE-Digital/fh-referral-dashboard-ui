                                <partial name="_ConnectionStatus" for="@itemStatus" />
                            </td>
                        </tr>
                    }
 *@
                </tbody>
            </table>
        </div>
        <partial name="_LargeSetPagination" model='Model.Pagination' />
    </div>
</div>

