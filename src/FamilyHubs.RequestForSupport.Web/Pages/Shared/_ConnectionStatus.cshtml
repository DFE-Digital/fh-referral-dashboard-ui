@using FamilyHubs.RequestForSupport.Core.ApiClients
@model FamilyHubs.ReferralService.Shared.Dto.ReferralDto

@* todo: should be int in model*@
@switch ((ReferralStatus)(int)Model.Status.Id)
{
    case ReferralStatus.Opened:
        <strong class="govuk-tag govuk-tag--yellow">Opened</strong>
        break;
    case ReferralStatus.Accepted:
        <strong class="govuk-tag govuk-tag--green">Accepted</strong>
        break;
    case ReferralStatus.Declined:
        <strong class="govuk-tag govuk-tag--red">Declined</strong>
        break;
    case ReferralStatus.New:
        <strong class="govuk-tag govuk-tag--blue">New</strong>
        break;
    default:
        throw new ArgumentOutOfRangeException($"Unexpected status id {Model.Status.Id}");
}
